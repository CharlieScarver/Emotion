<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Embedded\Shaders\DefaultFrag.glsl" />
    <None Remove="Embedded\Shaders\DefaultVertex.glsl" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Embedded\Shaders\DefaultFrag.glsl" />
    <EmbeddedResource Include="Embedded\Shaders\DefaultVertex.glsl" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FreeImage-dotnet-core" Version="4.3.6" />
    <PackageReference Include="Jint" Version="2.11.58" />
    <PackageReference Include="OpenTK" Version="3.0.0" />
    <PackageReference Include="SharpFontStandard" Version="4.0.1" />
    <PackageReference Include="ZKWeb.System.Drawing" Version="4.0.1" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Soul.Core">
      <HintPath>Libraries\Soul\Soul.Core.dll</HintPath>
    </Reference>
    <Reference Include="Soul.Encryption">
      <HintPath>Libraries\Soul\Soul.Encryption.dll</HintPath>
    </Reference>
    <Reference Include="Soul.Logging">
      <HintPath>Libraries\Soul\Soul.Logging.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <None Update="Libraries\External\x64\FreeImage.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Libraries\External\x64\libfreetype-6.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Libraries\External\x86\FreeImage.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Libraries\External\x86\libfreetype-6.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
